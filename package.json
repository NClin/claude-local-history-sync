{
  "name": "claude-sync",
  "version": "0.2.0",
  "description": "Sync Claude Code conversation history locally - stores history in project .claude folders",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "local-storage",
    "conversation-history",
    "git"
  ],
  "author": "NClin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NClin/claude-local-history-sync.git"
  },
  "bugs": {
    "url": "https://github.com/NClin/claude-local-history-sync/issues"
  },
  "homepage": "https://github.com/NClin/claude-local-history-sync#readme",
  "dependencies": {
    "commander": "^11.1.0",
    "chokidar": "^3.5.3",
    "chalk": "^5.3.0",
    "conf": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
